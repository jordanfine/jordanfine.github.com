.l-portfolio
	height: 1600px
	background: #2980b9

.l-portfolio--title
	column(12)
	h1
		color: $white
		font-size: 4em
		font-weight: 600
		span
			font-weight: 200

.l-portfolio--gatherimage
	column(5.5)
	clearfix()
	height: 100%
	position: absolute
	overflow: hidden
	top: 0
	left: 0
	transform: translate3d(0px, 1700px,-10px)
	margin: 0 

	.image
		transform: translate3d(700px,100px,0px)
		position: absolute



.l-portfolio--gather
	column(6.5)
	clearfix()
	float: left
	color: white
	padding: 0 0 50px 0
	height: 500px

	h1
		font-size: 4em
		font-weight: 600
		span
			font-weight: 200
	p
		font-weight: 300

.l-portfolio--hciimage
	column(5.5)
	clearfix()
	height: 100%
	position: absolute
	overflow: hidden
	top: 0
	left: 0
	transform: translate3d(0px, 2300px,-10px)
	margin: 0 

	.image
		transform: translate3d(-200px,100px,0px)
		position: absolute

.l-portfolio--hci
	column(6.5)
	clearfix()
	float: right
	color: white
	padding: 50px 0
	height: 500px

	h1
		font-size: 4em
		font-weight: 600
		span
			font-weight: 200
	p
		font-weight: 300